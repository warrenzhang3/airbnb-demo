<!-- app/views/bookings/index.html.erb -->
<h1 class="text-center">Your Bookings</h1>

<% if @bookings.present? && @bookings.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Dog Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.dog.name %></td>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td><%= number_to_currency(booking.total_price) %></td>
          <td><%= booking.status %></td>
          <td>
            <% if current_user.owner? %>
              <% if booking.status == 'pending' %>
                <%= link_to 'Accept', accept_booking_path(booking), method: :patch, class: 'btn btn-success' %>
                <%= link_to 'Decline', decline_booking_path(booking), method: :patch, class: 'btn btn-danger' %>
              <% end %>
            <% else %>
              <%= link_to 'Edit', edit_booking_path(booking), class: 'btn btn-secondary' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No bookings found.</p>
<% end %>
